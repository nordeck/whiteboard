{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "preLaunchTask": "npm: start",
      "url": "https://element.dev.nordeck.systems/#/room/!ZAsOtuQLwwjSqpyjlH:synapse.dev.nordeck.systems",
      "webRoot": "${workspaceFolder}",
      "userDataDir": "${workspaceRoot}/.vscode/chrome",
      "skipFiles": ["node_modules/**"],
      "smartStep": true,
      "internalConsoleOptions": "openOnSessionStart",
      "runtimeArgs": [
        // WARNING: This is required to debug the widget inside of an iframe. Only use this browser instance for debugging purposes!
        "--allow-insecure-localhost",
        "--disable-site-isolation-trials",
        "--disable-web-security"
      ]
    }
  ]
}
